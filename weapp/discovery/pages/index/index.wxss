/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
page {
  position: relative;
  /* 相对单位 viewport width or height*/
  width: 100vw;
  height: 100vh;
}
.container{
  position:absolute;
  top: 50%;
  left: 50%;

  transform: translate(-50%, -50%);
  width: 80%;
  border: 1px solid red;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 5px;
  text-align: center;
}
.title{
  color: red;
  font-size: 24px;
}
.image{
  width: 399px;
  height: 199px;
}
